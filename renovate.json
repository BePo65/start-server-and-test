{
  "extends": [
    "config:base"
  ],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "masterIssue": true,
  "schedule": [
    "before 2am"
  ],
  "updateNotScheduled": false,
  "timezone": "America/New_York",
  "packageRules": [
    {
      "packagePatterns": [
        "*"
      ],
      "excludePackagePatterns": [
        "bluebird",
        "check-more-types",
        "debug",
        "execa",
        "lazy-ass",
        "ps-tree",
        "wait-on"
      ],
      "enabled": false
    }
  ]
}
